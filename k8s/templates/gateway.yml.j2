apiVersion: apps/v1
kind: Deployment
metadata:
  name: gateway
  namespace: {{ namespace }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: gateway
  template:
    metadata:
      labels:
        app: gateway
    spec:
      containers:
        - name: gateway
          image: {{ gateway_image_repository }}:{{ gateway_image_tag }}
          imagePullPolicy: IfNotPresent
          env:
            - name: REDIS_HOST
              value: redis
            - name: REDIS_PORT
              value: "6379"
            - name: REDIS_QUEUE
              value: game-events
            - name: SCOREBOARD_KEY
              value: dungeon:scoreboard
          ports:
            - containerPort: 5000
---
apiVersion: v1
kind: Service
metadata:
  name: gateway
  namespace: {{ namespace }}
spec:
  type: NodePort
  selector:
    app: gateway
  ports:
    - port: 5000
      targetPort: 5000
